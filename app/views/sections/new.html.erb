<h1>New Section</h1>

<% if @section.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @section.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @section do |f| %>
  <%= f.label :section_title %>
  <%= f.text_field :section_title %>
  <%= f.submit  %>
<% end %>
